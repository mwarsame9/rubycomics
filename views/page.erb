<div id="page">
  <div class="nav row">
    <a href="/pages/<%= @page.first.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-fast-backward" aria-hidden="true"></span>
    </a>
    <a href="/pages/<%= @page.previous&.id || @page.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
    </a>
    <a href="/pages/<%= @page.next&.id || @page.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-forward" aria-hidden="true"></span>
    </a>
    <a href="/pages/<%= @page.last.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-fast-forward" aria-hidden="true"></span>
    </a>
  </div>
  <a href="/pages/<%= @page.next&.id || @page.id %>"><img id="page" src="<%= @page.page_img.url %>" alt="comic page"></a>
  <div class="nav row">
    <a href="/pages/<%= @page.first.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-fast-backward" aria-hidden="true"></span>
    </a>
    <a href="/pages/<%= @page.previous&.id || @page.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
    </a>
    <a href="/pages/<%= @page.next&.id || @page.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-forward" aria-hidden="true"></span>
    </a>
    <a href="/pages/<%= @page.last&.id %>" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-fast-forward" aria-hidden="true"></span>
    </a>
  </div>
</div>

<div class="container">
  <h2>Comments:</h2>
  <ul>
<% @page.comments.each do |comment| %>
  <li>
    <h3><%= comment.name %></h3>
    <p>
      <%= comment.comment_text %>
    </p>
    <small>created: <%= comment.created_at %> modified: <%= comment.updated_at %></small>
  </li>
  <% if current_user %>
    <a class='btn btn-warning' href='/pages/<%=@page.id%>/comments/<%= comment.id %>/delete'>Delete Comment</a>
  <% end %>
<% end %>
</ul>
<form action='/pages/<%=@page.id%>/comments' method="post">
  <div class='form-group'>
    <label for='comment[name]'>Your Name</label>
    <input type="text" name="comment[name]" required />
  </div>
  <div class="form-group">
    <label for='comment[comment_text]'>Comment</label>
    <input type='textarea' name='comment[comment_text]' required/>
  </div>
  <button type="submit" class='btn btn-info'>Submit</button>
</form>
</div>
